<% include ../layouts/header %>

<div class="row">
  <div class="col-md-6 offset-md-3 mt-4">
    <div class="card">
      <h2 class="card-header bg-dark text-white text-center">Log In</h2>

      <form method="POST" action="/auth/login" novalidate>
        <div class="card-body">
          <% include ../layouts/form-errors %>

          <div class="form-group">
            <label for="email">Email</label>
            <input
              id="email"
              type="email"
              name="email"
              class="form-control"
              required
              value="<%= (typeof user !== 'undefined' && user && user.email) ? user.email : '' %>"
            >
          </div>

          <div class="form-group">
            <label for="password">
              Password (<a href="/auth/forgot-password">Forgot password?</a>)
            </label>
            <input
              id="password"
              type="password"
              name="password"
              class="form-control"
              required
              minlength="8"
              autocomplete="current-password"
            >
          </div>

          <button type="submit" class="btn btn-dark btn-block">Log In</button>
        </div>
      </form>
    </div>
  </div>
</div>

